@using BlogWeb.Models.Entity
@model List<TBLHAKKIMDA>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @Html.Action("Meta")

    <!-- Bootstrap core CSS -->
    <link href="~/blog_sitem/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
    <link href="~/blog_sitem/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/blog_sitem/css/resume.min.css" rel="stylesheet">

    <!-- Google Adsense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4423420194292218"
            crossorigin="anonymous"></script>

</head>

<body id="page-top">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">BerkayYolcu</span>
            @foreach (var item in Model)
            {
                <span class="d-none d-lg-block">
                    <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="@item.Resim" alt="Berkay Yolcu">
                </span>
            }
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#about">Hakkımda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#experience">Deneyimlerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#education">Eğitim Hayatım</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#skills">Yeteneklerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#interests">Hobilerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#projects">Projelerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#awards">Sertifikalarım</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#communication">İletişim</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container-fluid p-0">
        <!-- About -->

        @foreach (var hk in Model)
        {
            <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
                <div class="my-auto">

                    <h1 class="mb-0">
                        @hk.AD
                        <span class="text-primary"> @hk.SOYAD </span>
                    </h1>

                    <div class="subheading mb-5">
                        @hk.ADRES - @hk.TELEFON
                        <a href="mailto:@hk.MAIL">@hk.MAIL</a>
                    </div>

                    <p class="lead mb-5">@hk.KISANOT</p>

                    <!-- social media -->

                    @Html.Action("SosyalMedya")

                </div>

            </section>
        }

        <hr class="m-0">
        <!-- experience -->

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
            @Html.Action("Deneyim")
        </section>

        <hr class="m-0">
        <!-- education -->

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="education">
            @Html.Action("Egitimlerim")
        </section>

        <hr class="m-0">
        <!-- skills -->

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="skills">
            @Html.Action("Yeteneklerim")
        </section>

        <hr class="m-0">
        <!-- interests -->

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="interests">
            @Html.Action("Hobilerim")
        </section>

        <hr class="m-0">
        <!-- projects -->

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="projects">
            @Html.Action("Projelerim")
        </section>

        <hr class="m-0">
        <!-- awards -->
        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="awards">
            @Html.Action("Sertifikalarım")
        </section>

        <hr class="m-0">
        <!-- communication -->

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="communication">
            @Html.Action("iletisim")
        </section>

    </div>


    <!-- Bootstrap core JavaScript -->
    <script src="~/blog_sitem/vendor/jquery/jquery.min.js"></script>
    <script src="~/blog_sitem/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/blog_sitem/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/blog_sitem/js/resume.min.js"></script>

</body>
</html>
