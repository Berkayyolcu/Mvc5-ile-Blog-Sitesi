
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Panel.cshtml";
}



<!-- Layout wrapper -->
<div class="layout-container">

    <!-- Layout container -->
    <div class="layout-page">

        <!-- Content wrapper -->
        <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
                <div class="row">
                    <!-- Order Statistics -->
                    <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">

                        <div class="card">
                            <div class="d-flex justify-content-between align-items-center">

                                <div class="card-body">

                                    <h5 class="card-title  text-primary">

                                        Giris Yaptıgınız Kullanıcı :

                                        <span class="text-dark"> @ViewBag.d1 🎉</span>

                                    </h5>

                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">

                        <div class="card h-100">

                            <div class="card-header d-flex align-items-center justify-content-between pb-0">
                                <div class="card-title mb-0">
                                    <h5 class="m-0 me-2">İstatistik</h5>
                                </div>
                            </div>

                            <div class="card-body">

                                <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
                                    <div class="d-flex flex-column align-items-center gap-1">
                                        <span>Kayıt Sayısı</span>
                                    </div>
                                </div>

                                <ul class="p-0 m-0">
                                    <!-- Deneyim -->
                                    <li class="d-flex mb-4 pb-1">

                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-primary">
                                                <i class="bx bxs-briefcase-alt-2"></i>
                                            </span>
                                        </div>

                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">

                                            <div class="me-2">
                                                <h6 class="mb-0">Deneyim</h6>
                                            </div>
                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.deneyim</small>
                                            </div>

                                        </div>
                                    </li>

                                    <!-- Eğitim -->
                                    <li class="d-flex mb-4 pb-1">

                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-success">
                                                <i class="bx bxs-school"></i>
                                            </span>
                                        </div>

                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">

                                            <div class="me-2">
                                                <h6 class="mb-0">Eğitim</h6>
                                            </div>

                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.egitim</small>
                                            </div>

                                        </div>
                                    </li>

                                    <!-- Yetenekler -->
                                    <li class="d-flex mb-4 pb-1">

                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-info">
                                                <i class="bx bx-street-view"></i>
                                            </span>
                                        </div>

                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                            <div class="me-2">
                                                <h6 class="mb-0">Yetenekler</h6>
                                            </div>

                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.yetenek</small>
                                            </div>

                                        </div>
                                    </li>

                                    <!-- Hobiler -->
                                    <li class="d-flex mb-4 pb-1">
                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-secondary">
                                                <i class="bx bx-lock-open-alt"></i>
                                            </span>
                                        </div>

                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">

                                            <div class="me-2">
                                                <h6 class="mb-0">Hobiler</h6>
                                            </div>

                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.hobi</small>
                                            </div>

                                        </div>
                                    </li>

                                    <!-- Projeler -->
                                    <li class="d-flex mb-4 pb-1">
                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-danger">
                                                <i class="bx bxs-pencil"></i>
                                            </span>
                                        </div>

                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">

                                            <div class="me-2">
                                                <h6 class="mb-0">Projeler</h6>
                                            </div>

                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.proje</small>
                                            </div>

                                        </div>
                                    </li>

                                    <!-- Sertifikalar -->
                                    <li class="d-flex mb-4 pb-1">
                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-warning">
                                                <i class="bx bxs-certification"></i>
                                            </span>
                                        </div>

                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">

                                            <div class="me-2">
                                                <h6 class="mb-0">Sertifikalar</h6>
                                            </div>

                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.sertifika</small>
                                            </div>

                                        </div>
                                    </li>
                                </ul>


                            </div>
                        </div>

                    </div>
                    <!--/ Order Statistics -->

                </div>
            </div>
            <!-- / Content -->

        </div>
        <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
</div>




