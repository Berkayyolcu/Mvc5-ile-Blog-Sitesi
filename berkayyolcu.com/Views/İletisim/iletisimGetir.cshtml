@model BlogWeb.Models.Entity.TBLİLETİSİM
@{
    ViewBag.Title = "iletisimGetir";
    Layout = "~/Views/Shared/Panel.cshtml";
}
@using (Html.BeginForm("iletisimGetir", "iletisim", FormMethod.Post))
{
    <div class="container">
        <div class="col-md-12">
            <div class="card shadow-none bg-transparent border border-danger mb-3" style="margin:100px;">
                <br />  <br />
                <h3 class="text-center text-danger ">Mesaj Detayları</h3>

                <div class="card-body mb-5">
                    <h5 class="card-title">İletisim id</h5>
                    <h5 class="card-title">@Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })</h5>

                    <h5 class="card-title">Adı ve Soyadı</h5>
                    <h5 class="card-title">@Html.TextBoxFor(k => k.AdveSoyad, new { @class = "form-control", @readonly = "readonly" })</h5>

                    <h5 class="card-title">Mail</h5>
                    <h5 class="card-title">@Html.TextBoxFor(k => k.Mail, new { @class = "form-control", @readonly = "readonly" })</h5>

                    <h5 class="card-title">Konu</h5>
                    <h5 class="card-title">@Html.TextBoxFor(k => k.Konu, new { @class = "form-control", @readonly = "readonly" })</h5>

                    <h5 class="card-title">Mesaj</h5>
                    <h5 class="card-title">@Html.TextAreaFor(k => k.Mesaj, new { @class = "form-control", @readonly = "readonly" })</h5>

                    <h5 class="card-title">Tarih</h5>
                    <h5 class="card-title">@Html.TextBoxFor(k => k.Tarih, new { @class = "form-control", @readonly = "readonly", })</h5>

                    <a href="/iletisim/Index/" class="btn btn-success mt-5">Geri Dön</a>

                </div>
            </div>
        </div>
    </div>
}

