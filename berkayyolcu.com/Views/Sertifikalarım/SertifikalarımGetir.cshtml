@model BlogWeb.Models.Entity.TBLSERTIFIKALAR
@{
    ViewBag.Title = "SertifikalarimGetir";
    Layout = "~/Views/Shared/Panel.cshtml";
}


<div class="container mt-5">

    <h3 class="text-center text-danger ">Sertifika Bilgi Güncelleme</h3>

    @using (Html.BeginForm("SertifikalarımGetir", "Sertifikalarım", FormMethod.Post))
    {
        <div style="margin-top:5px;"></div>

        <div class="form-group">

            <div style="margin-bottom:10px;">
                <label>Sertifika Id</label>
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Sertifilarım</label>
                @Html.TextBoxFor(k => k.SERTIFIKALARIM, new { @class = "form-control" })
            </div>


            <button class="btn btn-success mb-5">Güncelle</button>
        </div>
    }
</div>
