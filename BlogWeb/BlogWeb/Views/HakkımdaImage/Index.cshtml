@using BlogWeb.Models.Entity
@model List<BlogWeb.Models.Entity.TBLHAKKIMDA>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Panel.cshtml";
}



<table class="table table-striped" style="margin-top:100px;">

    <tr style="background-color:rgb(252,178,22)">
        <th>Hakkımda ID</th>
        <th>Güncel Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var hk in Model)
    {
        <tr>
            <td>@hk.ID</td>
            <td>
            <img src="@hk.Resim" alt="Berkayyolcu.png" style="border-radius:30%;" />
            </td>
            <td><a href="/HakkımdaImage/HakkımdaImageSil/@hk.ID" class="btn btn-danger" onclick="return sor()">Sil</a></td>
            <td><a href="/HakkımdaImage/HakkımdaImageGetir/@hk.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>


