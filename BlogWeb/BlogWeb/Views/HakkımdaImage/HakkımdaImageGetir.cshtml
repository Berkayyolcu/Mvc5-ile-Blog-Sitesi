@model BlogWeb.Models.Entity.TBLHAKKIMDA

@{
    ViewBag.Title = "HakkımdaImageGetir";
    Layout = "~/Views/Shared/Panel.cshtml";
}



<div class="container mt-5">

    <h3 class="text-center text-danger ">Hakkımda Image Güncelleme</h3>

    @using (Html.BeginForm("HakkımdaImageGuncelle", "HakkımdaImage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div style="margin-top:5px;"></div>

        <div class="form-group">

            <div style="margin-bottom:10px;">

                <label>Resim :</label>
                <input class="form-control" type="file" name="Resim" id="formFileMultiple" required>

            </div>

            <button class="btn btn-success mb-5">Güncelle</button>

        </div>
    }
</div>
