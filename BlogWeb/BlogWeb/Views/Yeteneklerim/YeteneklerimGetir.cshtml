@model BlogWeb.Models.Entity.TBLYETENEKLER
@{
    ViewBag.Title = "YeteneklerimGetir";
    Layout = "~/Views/Shared/Panel.cshtml";
}

<div class="container mt-5">

    <h3 class="text-center text-danger ">Yetenek Bilgi Güncelleme</h3>

    @using (Html.BeginForm("YeteneklerimGetir", "Yeteneklerim", FormMethod.Post))
    {
        <div style="margin-top:5px;"></div>

        <div class="form-group">

            <div style="margin-bottom:10px;">
                <label>Yetenekler Id</label>
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Yetenekler</label>
                @Html.TextBoxFor(k => k.YETENEKLER, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Yetenek Yüzdesi</label>
                @Html.TextBoxFor(k => k.ORAN, new { @class = "form-control" })
            </div>

            <button class="btn btn-success mb-5">Güncelle</button>
        </div>
    }
</div>
