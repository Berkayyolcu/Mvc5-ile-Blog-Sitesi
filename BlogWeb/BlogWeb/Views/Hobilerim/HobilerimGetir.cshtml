@model BlogWeb.Models.Entity.TBLHOBILER
@{
    ViewBag.Title = "HobilerimGetir";
    Layout = "~/Views/Shared/Panel.cshtml";
}

<div class="container mt-5">

    <h3 class="text-center text-danger ">Hobiler Bilgi Güncelleme</h3>

    @using (Html.BeginForm("HobilerimGetir", "Hobilerim", FormMethod.Post))
    {
        <div style="margin-top:5px;"></div>

        <div class="form-group">

            <div style="margin-bottom:10px;">
                <label>Hobiler Id</label>
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Hobiler</label>
                @Html.TextBoxFor(k => k.HOBBY, new { @class = "form-control" })
            </div>


            <button class="btn btn-success mb-5">Güncelle</button>
        </div>
    }
</div>
