@using BlogWeb.Models.Entity
@model List<BlogWeb.Models.Entity.TBLHOBILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Panel.cshtml";
}

<table class="table table-striped" style="margin-top:100px;">

    <tr style="background-color:rgb(252,178,22)">
        <th>Hobiler Id</th>
        <th>Hobiler</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var hobi in Model)
    {
        <tr>
            <td>@hobi.ID</td>
            <td>@hobi.HOBBY</td>
            <td><a href="/Hobilerim/HobilerimSil/@hobi.ID" class="btn btn-danger" onclick="return sor()">Sil</a></td>
            <td><a href="/Hobilerim/HobilerimGetir/@hobi.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>


