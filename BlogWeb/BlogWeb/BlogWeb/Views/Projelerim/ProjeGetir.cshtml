@model BlogWeb.Models.Entity.TBLPROJELER
@{
    ViewBag.Title = "ProjeGetir";
    Layout = "~/Views/Shared/Panel.cshtml";
}

<div class="container mt-5">

    <h3 class="text-center text-danger ">Proje Bilgi Güncelleme</h3>

    @using (Html.BeginForm("ProjeGetir", "Projelerim", FormMethod.Post))
    {
        <div style="margin-top:5px;"></div>

        <div class="form-group">

            <div style="margin-bottom:10px;">
                <label>Proje Id</label>
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Proje Adı</label>
                @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Proje Linki</label>
                @Html.TextBoxFor(k => k.LİNK, new { @class = "form-control" })
            </div>


            <button class="btn btn-success mb-5">Güncelle</button>
        </div>
    }
</div>
