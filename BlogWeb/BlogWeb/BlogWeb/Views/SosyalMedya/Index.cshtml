@using BlogWeb.Models.Entity
@model List<TBLSOSYALMEDYA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Panel.cshtml";
}


<div class="container mt-5">

    <table class="table table-striped" style="margin-top:100px;">
        <tr style="background-color:rgb(252,178,22)">
            <th>Sosyal Medya ID</th>
            <th>Adı</th>
            <th>Link</th>
            <th>İkon</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.AD</td>
                <td>@item.LİNK</td>
                <td>@item.İKON</td>
                <td>@item.DURUM</td>
                <td><a href="/SosyalMedya/SosyalMedyaSil/@item.ID" class="btn btn-danger" onclick="return sor()">Sil</a></td>
                <td><a href="/SosyalMedya/SosyalMedyaGetir/@item.ID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal1">Sosyal Medya Hesab Ekleme</button>
</div>






