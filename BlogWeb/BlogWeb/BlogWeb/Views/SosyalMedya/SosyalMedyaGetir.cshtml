@model BlogWeb.Models.Entity.TBLSOSYALMEDYA
@{
    ViewBag.Title = "SosyalMedyaGetir";
    Layout = "~/Views/Shared/Panel.cshtml";
}


<div class="container mt-5">

    <h3 class="text-center text-danger ">Sosyal Medya Bilgi Güncelleme</h3>

    @using (Html.BeginForm("SosyalMedyaGetir", "SosyalMedya", FormMethod.Post))
    {
        <div style="margin-top:5px;"></div>

        <div class="form-group">

            <div style="margin-bottom:10px;">
                <label>Sosyal Medya Id</label>
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Sosyal Medya Adı</label>
                @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Sosyal Medya Linki</label>
                @Html.TextBoxFor(k => k.LİNK, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Sosyal Medya İkon Adı</label>
                @Html.TextBoxFor(k => k.İKON, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Sosyal Medya Durum</label>
                @Html.TextBoxFor(k => k.DURUM, new { @class = "form-control" })
            </div>


            <button class="btn btn-success mb-5">Güncelle</button>
        </div>
    }
</div>
