@model BlogWeb.Models.Entity.TBLDENEYIM
@{
    ViewBag.Title = "DeneyimGetir";
    Layout = "~/Views/Shared/Panel.cshtml";
}


<div class="container mt-5">

    <h3 class="text-center text-danger ">Deneyim Bilgi Güncelleme</h3>

    @using (Html.BeginForm("DeneyimGetir", "Deneyim", FormMethod.Post))
    {
        <div style="margin-top:5px;"></div>

        <div class="form-group">

            <div style="margin-bottom:10px;">
                <label>Deneyim No :</label>
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Ünvan :</label>
                @Html.TextBoxFor(k => k.BASLIK, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Firma Adı :</label>
                @Html.TextBoxFor(k => k.ALTBASLIK, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Acıklama :</label>
                @Html.TextAreaFor(k => k.ACIKLAMA, new { @id = "editor" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Baslangıc ve Bitis Tarihi :</label>
                @Html.TextBoxFor(k => k.TARIH, new { @class = "form-control" })
            </div>

            <button class="btn btn-success mb-5">Güncelle</button>
        </div>
    }
</div>




@Scripts.Render("~/Scripts/jquery-1.7.1.min.js")
@Scripts.Render("~/ckeditor/ckeditor.js")
@Scripts.Render("~/ckeditor/ckfinder/ckfinder.js")
@Scripts.Render("~/Scripts/jquery.validate.js")


<script type="text/javascript">
    var editor = CKEDITOR.instances['editor'];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace('editor', {
        enterMode: CKEDITOR.ENTER_BR,
    });
    CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');
</script>