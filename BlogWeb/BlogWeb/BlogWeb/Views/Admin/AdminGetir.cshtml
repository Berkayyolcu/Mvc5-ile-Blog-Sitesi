@model BlogWeb.Models.Entity.TBLADMİN

@{
    ViewBag.Title = "AdminGetir";
    Layout = "~/Views/Shared/Panel.cshtml";
}

<div class="container mt-5">

    <h3 class="text-center text-danger ">Admin Bilgi Güncelleme</h3>

    @using (Html.BeginForm("AdminGetir", "Admin", FormMethod.Post))
    {
        <div style="margin-top:5px;"></div>

        <div class="form-group">

            <div style="margin-bottom:10px;">
                <label>Admin id</label>
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Kullanıcı Adı</label>
                @Html.TextBoxFor(k => k.User, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px;">
                <label>Sifre :</label>
                @Html.TextBoxFor(k => k.Password, new { @class = "form-control" })
            </div>
            <button class="btn btn-success mb-5">Güncelle</button>
        </div>
    }
</div>

